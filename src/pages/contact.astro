---

import {SITE_TITLE} from "../consts";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import SendMessageForm from "../components/SendMessageForm";
---

<html lang="en">
<head>
    <BaseHead title={SITE_TITLE} />
</head>
<body>
<Header title={SITE_TITLE} />

    <section class="info-section">
        <div class="info">
            <h2 class="title-big">What is the Lace Catalogue?</h2>
            <p>
                The Lace Catalogue offers a digital haven where lace makers from across Ireland can contribute their intricate creations to an ever-expanding gallery showcasing stunning lacework, all crafted by fellow lace makers.
            </p>
        </div>

        <img alt="contact image" class="contact-img" src="/assets/login-image.png">


    </section>

<footer>
    <div class="contact-message">
        <h2 class="title-big">Contact us</h2>
        <p class="contact-text">Have a question? Leave us a message and we will get back to you as soon as possible.</p>
    </div>

    <SendMessageForm client:load />
</footer>

</body>
<style>
    main {
        padding: 0;
    }

    .info-section {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        margin: 20px 10%;
    }

    .info {
        width: 668px;
    }


    .contact-img {
        width: 360px;
        height: 360px;
        object-fit: cover;
    }

    p, h2 {
        text-align: left;
    }

    footer {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        background-color: white;
        padding: 20px 10%;
        gap: 15px;
    }

</style>
</html>
